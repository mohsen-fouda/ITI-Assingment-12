        android:label="ITI Assignment"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ItiCourse"
        tools:targetApi="31">
        <activity
            android:name="com.Mohsin.iti.ui.CommentsActivity"
            android:exported="false" />
        <activity
            android:name="com.Mohsin.iti.ui.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.Mohsin.iti.ui.DetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.Mohsin.iti.ui.PostsActivity"
            android:exported="false" />
        <activity
